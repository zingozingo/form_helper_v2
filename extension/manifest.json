{
  "manifest_version": 3,
  "name": "AI Form Helper",
  "version": "2.0",
  "description": "An AI-powered assistant that helps you fill out forms with a simple button interface",
  "icons": {
    "16": "icons/favicon-16x16.png",
    "32": "icons/favicon-32x32.png",
    "192": "icons/android-chrome-192x192.png",
    "512": "icons/android-chrome-512x512.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "32": "icons/favicon-32x32.png",
      "192": "icons/android-chrome-192x192.png"
    },
    "default_title": "AI Form Helper v2.0",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "declarativeNetRequest",
    "notifications"
  ],
  "host_permissions": [
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": [
        "*://*.instagram.com/*",
        "*://*.facebook.com/*",
        "*://*.linkedin.com/*",
        "*://*.twitter.com/*",
        "*://*.tiktok.com/*",
        "*://*.pinterest.com/*",
        "*://*.youtube.com/*",
        "*://*.reddit.com/*",
        "*://*.snapchat.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "declarative_net_request": {
    "rule_resources": [{
      "id": "ruleset_1",
      "enabled": true,
      "path": "rules.json"
    }]
  },
  "web_accessible_resources": [
    {
      "resources": [
        "styles.css",
        "panel.html",
        "panel.js",
        "icons/*.png",
        "lib/*.js",
        "lib/*.css"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}